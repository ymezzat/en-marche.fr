        <div class="summary-skill">
            <span class="skill-remove">X</span>
            <span class="skill-value">&nbsp;{% if value is not empty %}{{ value }}{% endif %}</span>
            {{ block('hidden_widget') }}
        </div>
    {% endspaceless %}
{% endblock %}

